    <RelativeLayout
        android:id="@+id/take_picture_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/bottom_toolbar"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bottom_bar_landscape"
        android:orientation="vertical"
        android:padding="0dp"
        >

        <LinearLayout  android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="0dp"
            android:id="@+id/layoutToInflateButtons">
        <ImageButton
            android:id="@+id/change_mode_button"
            android:background="@drawable/button_in_video_mode"

            android:layout_height="@dimen/bottom_toolbar"
            android:layout_width="@dimen/bottom_icon_width"

            android:padding="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"

            />
        </LinearLayout>


        <ImageButton 
            android:id="@+id/info_button"
            android:layout_height="@dimen/bottom_toolbar"
            android:layout_width="@dimen/bottom_toolbar"
            android:padding="10dp"
        	android:layout_centerVertical="true"
        	android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
        	android:background="@null"/>
        
 	</RelativeLayout>

</RelativeLayout>
